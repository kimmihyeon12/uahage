style.
  .customoverlay {
    position:relative;
    margin-left: 25%;
    bottom:35px;
    border-radius:15px;
    border: 1px solid #ccc;
    border-bottom:2px solid #ddd;
    float:left;
    }
  .customoverlay:nth-of-type(n) {
    border:0;
    box-shadow:0px 1px 2px #888;
    }
  .customoverlay  .round {
    display:block;
    text-decoration:none;
    color:#000;
    text-align:center;
    border-radius:15px;
    font-size:14px;
    font-weight:bold;
    overflow:hidden;
    background: #f06292;

    }
  .customoverlay .title {
    display:block;
    text-align:center;
    background:#f06292;
    margin-right:0px;
    padding:10px 15px;
    font-size:14px;
    font-weight:bold;
    color: white;
    }
  .customoverlay:after {
    content:'';
    position:absolute;
    left:15%;
    bottom:-12px;
    width:22px;
    height:12px;
    background:url('https://t1.daumcdn.net/localimg/localimages/07/mapapidoc/vertex_white.png')
    }

#map(style='position: fixed;\
width: 100%;\
height: 100%;\
left: 0;\
top: 0;\
background: rgba(51,51,51,0.7);\
z-index: 10;')
script(type='text/javascript' src='//dapi.kakao.com/v2/maps/sdk.js?appkey=5a323567d193d1f90625406988f60389&libraries=services')
script.
  var mapContainer = document.getElementById('map'); // 지도를 표시할 div
   // 지도를 생성합니다
  mapOption = {
  center: new kakao.maps.LatLng(35.161184, 126.893916), // 지도의 중심좌표
  level: #{zoomInTo}// 지도의 확대 레벨
  };
  var map = new kakao.maps.Map(mapContainer, mapOption);
  //- var imageSrc = 'http://hohoco.dothome.co.kr/img/path.png',//'https://t1.daumcdn.net/localimg/localimages/07/mapapidoc/marker_number_blue.png', // 마커이미지의 주소입니다
  //- imageSize = new kakao.maps.Size(34 , 34), // 마커이미지의 크기입니다
  //- imageOption = {offset: new kakao.maps.Point(13, 34)}; // 마커이미지의 옵션입니다. 마커의 좌표와 일치시킬 이미지 안에서의 좌표를 설정합니다.
  //- // 마커의 이미지정보를 가지고 있는 마커이미지를 생성합니다
  //- var markerImage = new kakao.maps.MarkerImage(imageSrc, imageSize, imageOption),
  markerPosition = new kakao.maps.LatLng(35.161184, 126.893916);
  var markerMain = new kakao.maps.Marker({
  position: markerPosition,
  //- image: markerImage,
  });
  markerMain.setMap(map);



  var geocoder = new kakao.maps.services.Geocoder();
  // 주소로 좌표를 검색합니다
  geocoder.addressSearch('#{address}', function(result, status) {
  // 정상적으로 검색이 완료됐으면
  if (status === kakao.maps.services.Status.OK) {
  var coords = new kakao.maps.LatLng(result[0].y, result[0].x);

  var content = '<div class="customoverlay">' +
   '  <div class="round">' +
  '    <span class="title">#{storename}</span>' +
    '  </div>' +
  '</div>';
  var customOverlay = new kakao.maps.CustomOverlay({
  map: map,
  position: coords,
  content: content,
  yAnchor: 1
  });
  map.setCenter(coords);
  map.setDraggable(false);


  }
  });

