     //거리구하기
        function calcDist(lat1,lng1,lat2,lng2) {
            var ret = 0;
            var latA = 111;
            var lngB = 88.8;
            ret = Math.sqrt(
                    Math.pow((Math.abs(lat1 - lat2) * latA),2)
                    +
                    Math.pow((Math.abs(lng1 - lng2) * lngB),2)
                  ) *1000;//m
            return ret.toFixed(2);
          }
